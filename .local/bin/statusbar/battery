#!/usr/bin/env sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "ğŸ”‹ Battery module" "ï•¿: discharging
ï–‚: not charging
ï–: stagnant charge
ï–‰: charging
ï–ƒ: charged
â—ï•¹: battery very low!
- Text & icon color reflects charge left" ;;
esac

capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
status=$(cat /sys/class/power_supply/"$1"/status)

if [ "$capacity" -ge 90 ]; then
	color="#00ff00"
	baticon="ï–"
	chicon="ï–Š"
elif [ "$capacity" -ge 70 ]; then
	color="#00ff00"
	baticon="ï•¿"
	chicon="ï–‰"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
	baticon="ï•½"
	chicon="ï–‡"
elif [ "$capacity" -ge 30 ]; then
	color="#ffff00"
	baticon="ï•»"
	chicon="ï–†"
elif [ "$capacity" -ge 20 ]; then
	color="#ffff00"
	baticon="ï•º"
	chicon="ï–…"
else
	color="#ff0000"
	warn="â—ï•¹"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#ffffff"

printf "<span color='%s'>%s%s%s</span>\n" "$color" "$(echo "$status" | sed -e "s/,//;s/Discharging/$baticon/;s/Not Charging/ï–‚/;s/Charging/$chicon/;s/Unknown/ï–/;s/Full/ï–ƒ/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
